<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaf1f2"
    android:orientation="vertical"
    tools:context="com.yan.sh.sh_android.ui.DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        <TextView
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/tv_time_remaining"
            android:maxLines = "1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Remaining: XX:XX"
            android:textSize="28dp"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>

        <TextView
            android:textColor="@color/cardview_dark_background"
            android:id="@+id/tv_objectives_remaining"
            android:maxLines = "1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Objectives Remaining: "
            android:textSize="28dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Recycler here -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_objective"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ScrollView>


</LinearLayout>
